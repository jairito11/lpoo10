      <tr class="form-group">
        <th></th>
        <td><%= submit_tag  "Buscar ",class: 'btn btn-success form-control m-1 p-1'%></td>
      </tr>
    </form>
    </div>  
</div>
<%end%>


<div class="container">
<div class="col-sm-10 col-sm offset-1">
<table>
      <thead>
        <tr>
          <th class="form-group">Rfc</th>
          <th class="form-group">Curp</th>
          <th class="form-group">Nombre</th>
          <th class="form-group">Paterno</th>
          <th class="form-group">Materno</th>
          <th class="form-group">Sexo</th>
          <th class="form-group">Telefono</th>
