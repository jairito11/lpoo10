<table>
  <thead>
    <tr>
      <th>Rfc</th>
      <th>Curp</th>
      <th>Nombre</th>
      <th>Paterno</th>
      <th>Materno</th>
      <th>Sexo</th>
      <th>Telefono</th>
      <th>Correo</th>
      <th>Login</th>
      <th>Password</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.rfc %></td>
        <td><%= usuario.curp %></td>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.paterno %></td>
        <td><%= usuario.materno %></td>
        <td><%= usuario.sexo %></td>
        <td><%= usuario.telefono %></td>
        <td><%= usuario.correo %></td>
        <td><%= usuario.login %></td>
        <td><%= usuario.password %></td>
        <td><%= usuario.estado.nombre %></td>
        <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Â¿Desea eliminar este elemento?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @usuarios , previous_label: 'Anterior', next_label: 'Siguiente'%>
