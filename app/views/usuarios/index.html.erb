<%= form_tag(buscar_usuario_path) do%>
<div class="container">
  <div class="col-sm-10 col-sm offset-1">
    <form>
      <tr class="form-group"><h1>Usuarios</h1></tr>
      <tr class="form-group">
        <th>RFC</th>
        <td><%= text_field_tag "rfc","",class: 'form-control m-1 p-1', placeholder: 'Ingresa rfc'%></td>
      </tr>
      <tr class="form-group">
        <th>CURP</th>
        <td><%= text_field_tag "curp","",class: 'form-control m-1 p-1', placeholder: 'Ingresa curp'%></td>
