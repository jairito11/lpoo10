          <th class="form-group">Login</th>
          <th class="form-group">Password</th>
          <th class="form-group">Estado</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @usuarios.each do |usuario| %>
          <tr>
            <td><%= usuario.rfc %></td>
            <td><%= usuario.curp %></td>
            <td><%= usuario.nombre %></td>
            <td><%= usuario.paterno %></td>
            <td><%= usuario.materno %></td>
            <td><%= usuario.sexo %></td>
            <td><%= usuario.telefono %></td>
            <td><%= usuario.correo %></td>
            <td><%= usuario.login %></td>
            <td><%= usuario.password %></td>
            <td><%= usuario.estado.nombre %></td>
            <td><%= link_to image_tag('buscar.jpg', :alt => 'imagen buscar', :width => '18px', :height => '18px', :title => "Consultar", :style => 'border: 0px'),usuario %></td>
            <td><%= link_to 'Show', usuario %></td>
