<table>
		<tr>
			<th><%= f.label :nombre %></th>
			<td>
				<%=f.hidden_field :id %>
				<%= f.text_field :nombre %>
				
			</td>
		</tr>
		<tr>
			<th><%= f.label :descripcion %></th>
			<td><%= f.text_field :descripcion %></td>
		</tr>
		<tr>
			<th><%= f.label :pais_id %></th>
			<td><%= f.select :pais_id, @paises.collect{|e| [e.nombre,e.description]}, {include_blank: "Selecciona uno."} %></td>
		</tr>
		<tr>
			<th></th>
			<td><%= f.submit "Guardar"%></td>
		</tr>		
	</table>	

  <div class="form-group row">
    <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
    <div class="col-sm-10">
     	<%= f.text_field :nombre, :class => "form-control"%>
    </div>
  </div>
